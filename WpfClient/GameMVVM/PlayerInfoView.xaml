<UserControl x:Class="WpfClient.GameMVVM.PlayerInfoView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfClient.GameMVVM"
             xmlns:playerInfo="clr-namespace:WpfClient.GameMVVM"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.DataContext>
        <playerInfo:PlayerInfoViewModel/>
    </UserControl.DataContext>
    <Grid>
        <StackPanel DataContext="{Binding playerInfo.currentPlayer}">
            <Label>Gamer Tag</Label>
            <Label Content="{Binding Path= currentPlayer.GamerTag }" ></Label>
        </StackPanel>
    </Grid>
</UserControl>
